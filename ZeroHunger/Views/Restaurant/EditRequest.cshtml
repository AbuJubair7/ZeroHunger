@model List<ZeroHunger.Models.FoodRequest>

@{
    Layout = "_RestaurantLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2>Food Requests</h2>
    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Food Name</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Preserve Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.FoodName</td>
                        <td>@request.FoodQuantity</td>
                        <td>@request.Status</td>
                        <td>@request.PreserveDate</td>
                        <td>
                            <form asp-controller="Restaurant" asp-action="EditRequest" method="post">
                                <input type="hidden" name="id" value="@request.Id" />
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No data exists.</p>
    }
</div>
